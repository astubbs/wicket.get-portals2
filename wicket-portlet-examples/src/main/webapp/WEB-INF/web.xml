<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>WicketPortlet</display-name>
    <description>Wicket Portlet Example</description>

	<context-param>
	  <param-name>configuration</param-name>
	  <param-value>development</param-value>
	</context-param>

	<filter>
		<filter-name>PortletExampleApplication</filter-name>
		<filter-class>wicket.protocol.http.portlet.WicketPortletFilter</filter-class>
		<init-param>
		  <param-name>filterPath</param-name>
		  <param-value>portletexample</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>PortletExampleApplication</filter-name>
		<url-pattern>/portletexample/*</url-pattern>
	</filter-mapping>

</web-app>
