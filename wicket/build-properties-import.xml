
<project name = "build-properties-import">

    <property name = "toolkit.name"            value = "Wicket"/>
    <property name = "toolkit.version"         value = "0.9.11-alpha"/>
    <property name = "toolkit.full.name"       value = "${toolkit.name}-${toolkit.version}"/>        

    <property name = "sdk.name"                value = "${toolkit.name}-SDK"/>
    <property name = "sdk.version"             value = "${toolkit.version}"/>
    <property name = "sdk.full.name"           value = "${sdk.name}-${sdk.version}"/>

    <property name = "folder.sdk.lib"          value = "${folder.root}/lib"/>
    <property name = "folder.sdk.src"          value = "${folder.root}/src/java"/>
    <property name = "folder.sdk.doc"          value = "${folder.root}/doc"/>
    <property name = "folder.sdk.javadoc"      value = "${folder.sdk.doc}/javadoc"/>
    <property name = "folder.sdk.examples"     value = "${folder.root}/examples"/>
    <property name = "folder.sdk.build"        value = "${folder.root}/build/${sdk.name}"/>
	<property name = "folder.sdk.classes"      value = "${folder.sdk.build}/classes"/>
    <property name = "folder.sdk.distribution" value = "${folder.sdk.build}/distribution"/>

    <property name = "file.toolkit.jar"        value = "${folder.sdk.lib}/${toolkit.full.name}.jar"/>
    <property name = "file.sdk.distribution"   value = "${folder.sdk.distribution}/${sdk.full.name}.zip"/> 
    
    <path id = "classpath.sdk">

        <pathelement path = "${folder.sdk.classes}"/>

    	<fileset dir      = "${folder.sdk.lib}" 
    	         includes = "**/*.jar"/>

    </path>	
    
	<available file = "${folder.sdk.src}" type = "dir" property = "folder.sdk.src.exists"/>
    
</project>
